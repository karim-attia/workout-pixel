<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_instructions"
        style="@style/Card"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/CardInnerView"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/instructions_step_title"
                style="@style/InstructionsTextView.Title"
                android:text="Step 1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/instructions_step_image"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/instructions_step_text"
                style="@style/InstructionsTextView"
                android:gravity="fill_horizontal"
                android:text="First, long click anywhere on your homescreen until you see an option to add widgets."
                app:layout_constraintTop_toBottomOf="@id/instructions_step_title"
                app:layout_constraintEnd_toStartOf="@+id/instructions_step_image"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                style="@style/InstructionsImages"
                android:id="@+id/instructions_step_image"
                tools:src="@drawable/instructions_long_click"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
