<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        >


<!--
        <TextView
            android:id="@+id/title_goal_detail_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="30sp"
            tools:text="Title" />
-->

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_goal_overview"
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/CardInnerView"
                >

                <TextView
                    android:id="@+id/goal_overview_title"
                    style="@style/DetailViewText.Title"
                    android:text="@string/goal_overview"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />


                <TextView
                    android:id="@+id/widget_preview"
                    style="@style/WorkoutPixelPreview"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/goal_overview_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginVertical="4dp"
                    android:background="#7b1fa2"
                    />

                <GridLayout
                    android:id="@+id/grid_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/widget_preview"
                    app:layout_constraintTop_toTopOf="@id/widget_preview"
                    android:columnCount="2"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="6dp"
                    >

                    <ImageView
                        style="@style/Icon.Narrow"
                        android:src="@drawable/icon_date"
                        tools:ignore="ContentDescription"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="1dp"
                        />

                    <TextView
                        android:id="@+id/widget_interval"
                        style="@style/GridText"
                        tools:text="Every 2 days" />
                    <ImageView
                        style="@style/Icon.Wide"
                        android:src="@drawable/icon_done"
                        tools:ignore="ContentDescription"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        />

                    <TextView
                        android:id="@+id/widget_last_workout"
                        style="@style/GridText"
                        tools:text="Last Workout" />
                </GridLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/connect_info"
            style="@style/Card"
            android:visibility="gone"
            tools:visibility="visible"
            >

        <LinearLayout
            style="@style/CardInnerView"
            android:background="#e3f2fd"
            android:orientation="vertical"
            >

            <TextView
                style="@style/DetailViewText.Title"
                android:id="@+id/connect_widget_title"
                android:text="No widget for this goal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                style="@style/DetailViewText"
                android:text="@string/connect_widget_main_activity"
                />

            <Button
                android:id="@+id/delete_goal"
                style="@style/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_goal"
                tools:ignore="ContentDescription"
                />

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/Card"
            >

            <LinearLayout
                style="@style/CardInnerView"
                android:orientation="vertical">

                <TextView
                    style="@style/DetailViewText.Title"
                    android:id="@+id/past_workouts_title"
                    android:text="@string/past_clicks"
                    />
                <TextView
                    style="@style/DetailViewText"
                    android:id="@+id/past_workouts_description"
                    android:text="@string/you_have_never_completed_this_goal_as_soon_as_you_click_on_the_widget_the_click_will_show_up_here"
                    />

                <include layout="@layout/card_past_workout" />

                <View
                    android:id="@+id/past_workouts_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    app:layoutManager="LinearLayoutManager" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>