<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/configure_activity_intro_text"
            style="@style/configureActivityMainItem"
            android:text="@string/instructions" />

        <androidx.cardview.widget.CardView
            android:id="@+id/connect_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/connect_widget_instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connect_widget_instructions" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/connect_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />

                    <Button
                        android:id="@+id/connect_widget_button"
                        style="@style/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/connect" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            style="configureActivityMainItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widgetTitle"
            android:labelFor="@+id/appwidget_text"/>

        <EditText
            android:id="@+id/appwidget_text"
            style="@style/configureActivityMainItem"
            android:inputType="text"
            android:importantForAutofill="no" />

        <TextView
            style="@style/configureActivityMainItem"
            android:text="@string/interval" />

        <LinearLayout
            android:id="@+id/days"
            style="@style/configureActivityMainItem"
            android:orientation="horizontal">

            <Button
                android:id="@+id/minus"
                style="@style/button"
                android:text="-"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/goal_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="2"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/plus"
                style="@style/button"
                android:text="+"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/day" />

            <TextView
                android:id="@+id/plural"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plural" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <TextView
            style="@style/configureActivityMainItem"
            android:text="@string/date_time_instructions" />

        <CheckBox
            android:id="@+id/showDateCheckbox"
            style="@style/configureActivityMainItem"
            android:layout_marginVertical="0dp"
            android:text="@string/show_date_in_the_widget" />

        <CheckBox
            android:id="@+id/showTimeCheckbox"
            style="@style/configureActivityMainItem"
            android:layout_marginVertical="0dp"
            android:text="@string/show_time_in_the_widget" />

        <TextView
            style="@style/configureActivityMainItem"
            android:text="@string/preview" />

        <TextView
            android:id="@+id/widget_preview"
            style="@style/WorkoutPixelPreview"
            android:background="#7b1fa2" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/add_button"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/add_widget" />


    </LinearLayout>
</ScrollView>