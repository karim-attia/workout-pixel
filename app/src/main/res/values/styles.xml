<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="daysView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">40dp</item>
    </style>


    <style name="configureActivityMainItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="roundedCornerBackground">
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginsTop</item>
        <item name="android:layout_marginLeft">@dimen/margins</item>
        <item name="android:layout_marginRight">@dimen/margins</item>
        <item name="android:layout_marginBottom">@dimen/marginsBottom</item>
    </style>

    <style name="WorkoutPixel">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WorkoutPixelPreview" parent="WorkoutPixel">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">#7b1fa2</item>
    </style>
</resources>