<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/goalsFragment">

    <fragment
        android:id="@+id/instructionsFragment"
        android:name="com.example.workoutpixel.Main.InstructionsFragment"
        android:label="fragment_goals"
        tools:layout="@layout/instructions"
        >
    </fragment>
    <fragment
        android:id="@+id/goalsFragment"
        android:name="com.example.workoutpixel.Main.GoalsFragment"
        android:label="GoalsFragment"
        tools:layout="@layout/goals"
        >
        <action
            android:id="@+id/action_goalsFragment_to_instructionsFragment"
            app:destination="@id/instructionsFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
        <action
            android:id="@+id/action_goalsFragment_to_goalDetailFragment"
            app:destination="@id/goalDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>
    <fragment
        android:id="@+id/configureFragment"
        android:name="com.example.workoutpixel.Core.ConfigureFragment"
        android:label="ConfigureFragment"
        tools:layout="@layout/configuration"
        >
        <argument
            android:name="isFirstConfigure"
            app:argType="boolean"
            android:defaultValue="true" />
        <argument
            android:name="goalUid"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="appWidgetId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/goalDetailFragment"
        android:name="com.example.workoutpixel.PastWorkouts.GoalDetailFragment"
        android:label="GoalDetailFragment"
        tools:layout="@layout/goal_detail_view"
        >
        <argument
            android:name="goalUid"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_goalDetailFragment_to_configureFragment"
            app:destination="@id/configureFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>
</navigation>